<h1>SHOW</h1>
<p><%= @list.name %> ID: <%= @list.id %></p>

<% @list.bookmarks.each do |bookmark| %>
  <div class="card" style="width: 15rem;">
  <%= image_tag bookmark.movie.poster_url, alt: "Movie poster", width: 300, class: "card-img-top" %>
  <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Rating: <%= bookmark.movie.rating %></h6>
    <p class="card-text"><%= bookmark.movie.overview %></p>
    <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
  </div>
</div>
<% end %>

<p><%= link_to "Create a new bookmark", new_list_bookmark_path(@list) %></p>

<p><%= link_to "Delete this list", list_path(@list), method: :delete, data: { confirm: "Are you sure?" } %></p>
